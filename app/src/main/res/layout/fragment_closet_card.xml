<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Calendar Section -->
    <LinearLayout
        android:id="@+id/calendar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tvCalendarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2026년 1월 1일"
                android:textColor="#333333"
                android:textSize="19sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="12dp"
                android:layout_marginHorizontal="8dp"
                android:background="#DDDDDD" />

            <TextView
                android:id="@+id/tvWeatherInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="최고: 2° 최저: -10°"
                android:textColor="#666666"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Dates -->
        <LinearLayout
            android:id="@+id/dates_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingHorizontal="10dp">

            <FrameLayout
                android:id="@+id/frame_date_1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1">

                <View
                    android:id="@+id/dateView1"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_closet_date_selected" />

                <TextView
                    android:id="@+id/tvDate1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="1"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/frame_date_2"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1">

                <View
                    android:id="@+id/dateView2"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_closet_date_selected" />

                <TextView
                    android:id="@+id/tvDate2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="2"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/frame_date_3"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1">

                <View
                    android:id="@+id/dateView3"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_closet_date_selected" />

                <TextView
                    android:id="@+id/tvDate3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="3"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/frame_date_4"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1">

                <View
                    android:id="@+id/dateView4"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_closet_date_selected" />

                <TextView
                    android:id="@+id/tvDate4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="4"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/frame_date_5"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1">

                <View
                    android:id="@+id/dateView5"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_closet_date_selected" />

                <TextView
                    android:id="@+id/tvDate5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="5"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/frame_date_6"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1">

                <View
                    android:id="@+id/dateView6"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_closet_date_selected" />

                <TextView
                    android:id="@+id/tvDate6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="6"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/frame_date_7"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1">

                <View
                    android:id="@+id/dateView7"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_closet_date_selected" />

                <TextView
                    android:id="@+id/tvDate7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="7"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"/>
            </FrameLayout>
        </LinearLayout>

        <!-- Empty slots (optional) -->
        <LinearLayout
            android:id="@+id/day_slots_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:paddingBottom="8dp">

            <ImageView
                android:id="@+id/day1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="1"
                android:background="@drawable/bg_closet_card" />

            <ImageView
                android:id="@+id/day2"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/bg_closet_card" />

            <ImageView
                android:id="@+id/day3"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/bg_closet_card" />

            <ImageView
                android:id="@+id/day4"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/bg_closet_card" />

            <ImageView
                android:id="@+id/day5"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/bg_closet_card" />

            <ImageView
                android:id="@+id/day6"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/bg_closet_card" />

            <ImageView
                android:id="@+id/day7"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/bg_closet_card" />
        </LinearLayout>
    </LinearLayout>

    <!-- My Wardrobe Header -->
    <LinearLayout
        android:id="@+id/wardrobe_header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/calendar_layout">

        <TextView
            android:id="@+id/my_closet_title_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="내 옷장"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/addIconIv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_closet_plus"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:layout_marginEnd="8dp"/>

        <ImageView
            android:id="@+id/moreOptionsIv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_closet_more"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"/>
    </LinearLayout>

    <!-- Tabs -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvClosetChips"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="10dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/wardrobe_header_layout"
        tools:listitem="@layout/item_closet_chip_list" />

    <!-- 전체 배경 카드 -->
    <ScrollView
        android:id="@+id/scroll_closet_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:background="@drawable/bg_closet_card_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rvClosetChips">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="25dp">

            <!-- ✅ 옷장 타입 (행거 + 서랍) -->
            <LinearLayout
                android:id="@+id/layoutHangerGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <!-- 행거 영역 -->
                <LinearLayout
                    android:layout_width="280dp"
                    android:layout_height="220dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <!-- 행거 1 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_closet_card"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/tvHanger1Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="행거 1"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <ImageView
                            android:id="@+id/btnHanger1"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="end"
                            android:src="@drawable/ic_closet_chevron_right" />
                    </LinearLayout>

                    <!-- 행거 2 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_closet_card"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/tvHanger2Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="행거 2"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <ImageView
                            android:id="@+id/btnHanger2"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="end"
                            android:src="@drawable/ic_closet_chevron_right" />
                    </LinearLayout>
                </LinearLayout>

                <!-- ✅ 서랍 영역 (행거 밖으로 이동) -->
                <!-- 서랍 1 -->
                <LinearLayout
                    android:id="@+id/drawer1_1"
                    android:layout_width="280dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_closet_card"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvDrawer11Title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="서랍 1"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/btnDrawer11"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_closet_chevron_right" />
                </LinearLayout>

                <!-- 서랍 2 -->
                <LinearLayout
                    android:id="@+id/drawer1_2"
                    android:layout_width="280dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_closet_card"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvDrawer12Title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="서랍 2"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/btnDrawer12"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_closet_chevron_right" />
                </LinearLayout>
            </LinearLayout>

            <!-- ✅ 서랍장 타입 (서랍 4개) -->
            <LinearLayout
                android:id="@+id/layoutDrawerGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/drawer1"
                    android:layout_width="280dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_closet_card"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvDrawer1Title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="서랍 1"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/btnDrawer1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_closet_chevron_right" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/drawer2"
                    android:layout_width="280dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_closet_card"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvDrawer2Title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="서랍 2"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/btnDrawer2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_closet_chevron_right" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/drawer3"
                    android:layout_width="280dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_closet_card"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvDrawer3Title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="서랍 3"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/btnDrawer3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_closet_chevron_right" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/drawer4"
                    android:layout_width="280dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_closet_card"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvDrawer4Title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="서랍 4"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/btnDrawer4"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_closet_chevron_right" />
                </LinearLayout>
            </LinearLayout>

            <!-- ✅ 신발장 타입 (선반 6개) -->
            <LinearLayout
                android:id="@+id/layoutShoesGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/shoes1"
                    android:layout_width="280dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_closet_card"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvShoes1Title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="선반 1"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/btnShoes1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_closet_chevron_right" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/shoes2"
                    android:layout_width="280dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_closet_card"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvShoes2Title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="선반 2"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/btnShoes2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_closet_chevron_right" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/shoes3"
                    android:layout_width="280dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_closet_card"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvShoes3Title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="선반 3"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/btnShoes3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_closet_chevron_right" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/shoes4"
                    android:layout_width="280dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_closet_card"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvShoes4Title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="선반 4"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/btnShoes4"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_closet_chevron_right" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/shoes5"
                    android:layout_width="280dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_closet_card"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvShoes5Title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="선반 5"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/btnShoes5"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_closet_chevron_right" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/shoes6"
                    android:layout_width="280dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_closet_card"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvShoes6Title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="선반 6"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

