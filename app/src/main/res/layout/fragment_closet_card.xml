<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Calendar Section -->
    <LinearLayout
        android:id="@+id/calendar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Days of week -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="일"
                android:textColor="#666666"
                android:textSize="12sp"
                android:gravity="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="월"
                android:textColor="#666666"
                android:textSize="12sp"
                android:gravity="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="화"
                android:textColor="#666666"
                android:textSize="12sp"
                android:gravity="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="수"
                android:textColor="#666666"
                android:textSize="12sp"
                android:gravity="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="목"
                android:textColor="#666666"
                android:textSize="12sp"
                android:gravity="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="금"
                android:textColor="#666666"
                android:textSize="12sp"
                android:gravity="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="토"
                android:textColor="#666666"
                android:textSize="12sp"
                android:gravity="center" />
        </LinearLayout>

        <!-- Dates -->
        <LinearLayout
            android:id="@+id/dates_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/date_28"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="28"
                android:textColor="#666666"
                android:textSize="14sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/date_29"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="29"
                android:textColor="#666666"
                android:textSize="14sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/date_30"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="30"
                android:textColor="#666666"
                android:textSize="14sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/date_31"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="31"
                android:textColor="#666666"
                android:textSize="14sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/date_1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="1"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:gravity="center"
                android:background="@drawable/bg_closet_date_selected" />

            <TextView
                android:id="@+id/date_2"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="2"
                android:textColor="#666666"
                android:textSize="14sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/date_3"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="3"
                android:textColor="#666666"
                android:textSize="14sp"
                android:gravity="center" />
        </LinearLayout>

        <!-- Empty slots (optional) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:paddingBottom="8dp">

            <View
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="5dp"
                android:background="#E0E0E0" />

            <View
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="5dp"
                android:background="#E0E0E0" />

            <View
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="5dp"
                android:background="#E0E0E0" />

            <View
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="5dp"
                android:background="#E0E0E0" />

            <View
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="5dp"
                android:background="#E0E0E0" />

            <View
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="5dp"
                android:background="#E0E0E0" />

            <View
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="5dp"
                android:background="#E0E0E0" />
        </LinearLayout>
    </LinearLayout>

    <!-- My Wardrobe Header -->
    <LinearLayout
        android:id="@+id/wardrobe_header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/calendar_layout">

        <TextView
            android:id="@+id/my_closet_title_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="내 옷장"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/add_icon_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_closet_plus"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:layout_marginEnd="12dp" />

        <ImageView
            android:id="@+id/more_options_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_closet_more_vertical"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp" />
    </LinearLayout>

    <!-- Tabs -->
    <HorizontalScrollView
        android:id="@+id/closet_chip_scroll_hs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/wardrobe_header_layout">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tab_wardrobe1_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:background="@drawable/closet_chip_scroll_on_background"
                android:paddingHorizontal="15dp"
                android:paddingVertical="8dp"
                android:text="옷장1"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tab_drawer1_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:background="@drawable/closet_chip_scroll_off_background"
                android:paddingHorizontal="15dp"
                android:paddingVertical="8dp"
                android:text="서랍장1"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/tab_shoerack1_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:background="@drawable/closet_chip_scroll_off_background"
                android:paddingHorizontal="15dp"
                android:paddingVertical="8dp"
                android:text="신발장1"
                android:textColor="#FFFFFF" />

            <View
                android:layout_width="90dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/view_layout_iv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_closet_view_list"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- 전체 배경 카드 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/bg_closet_card_back"
        app:layout_constraintTop_toBottomOf="@id/closet_chip_scroll_hs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 상단 행거 2개 -->
        <LinearLayout
            android:id="@+id/hanger_row"
            android:layout_width="280dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <!-- 행거 1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_closet_card"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginEnd="8dp">

                <TextView
                    android:text="행거 1"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/black" />

                <TextView
                    android:text="아우터"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"/>

                <TextView
                    android:text="8 items"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="end"
                    android:src="@drawable/ic_closet_chevron_right"/>
            </LinearLayout>

            <!-- 행거 2 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_closet_card"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginStart="8dp">

                <TextView
                    android:text="행거 2"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"/>

                <TextView
                    android:text="아우터"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"/>

                <TextView
                    android:text="8 items"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="end"
                    android:src="@drawable/ic_closet_chevron_right"/>
            </LinearLayout>
        </LinearLayout>


        <!-- 서랍 1 -->
        <LinearLayout
            android:id="@+id/drawer1"
            android:layout_width="280dp"
            android:layout_height="90dp"
            android:background="@drawable/bg_closet_card"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="16dp"
            android:layout_marginTop="16dp">

            <TextView
                android:text="서랍 1"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/black"/>

            <TextView
                android:text="아우터"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/black"/>

            <TextView
                android:text="8 items"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/black"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="end"
                android:src="@drawable/ic_closet_chevron_right"/>
        </LinearLayout>


        <!-- 서랍 2 -->
        <LinearLayout
            android:id="@+id/drawer2"
            android:layout_width="280dp"
            android:layout_height="90dp"
            android:background="@drawable/bg_closet_card"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="16dp"
            android:layout_marginTop="16dp">

            <TextView
                android:text="서랍 2"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView
                android:text="아우터"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView
                android:text="8 items"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="end"
                android:src="@drawable/ic_closet_chevron_right"/>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
