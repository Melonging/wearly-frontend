<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/closet_main_background">

    <TextView
        android:id="@+id/my_closet_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:text="내 옷장"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <HorizontalScrollView
        android:id="@+id/closet_chip_scroll_hs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingStart="20dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/my_closet_title_tv">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView android:id="@+id/look_chip_title_01_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginEnd="15dp" android:background="@drawable/closet_chip_scroll_on_background" android:paddingHorizontal="15dp" android:paddingVertical="8dp" android:text="옷장1" android:textColor="#000000" />
            <TextView android:id="@+id/look_chip_title_02_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginEnd="15dp" android:background="@drawable/closet_chip_scroll_off_background" android:paddingHorizontal="15dp" android:paddingVertical="8dp" android:text="옷장2" android:textColor="#FFFFFF" />
            <TextView android:id="@+id/look_chip_title_03_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginEnd="15dp" android:background="@drawable/closet_chip_scroll_off_background" android:paddingHorizontal="15dp" android:paddingVertical="8dp" android:text="서랍장" android:textColor="#FFFFFF" />
            <TextView android:id="@+id/look_chip_title_04_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginEnd="15dp" android:background="@drawable/closet_chip_scroll_off_background" android:paddingHorizontal="15dp" android:paddingVertical="8dp" android:text="행거" android:textColor="#FFFFFF" />
            <TextView android:id="@+id/look_chip_title_05_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginEnd="15dp" android:background="@drawable/closet_chip_scroll_off_background" android:paddingHorizontal="15dp" android:paddingVertical="8dp" android:text="신발장1" android:textColor="#FFFFFF" />
        </LinearLayout>
    </HorizontalScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/closet_grid_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/codi_record_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/closet_chip_scroll_hs">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_vertical_50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <LinearLayout
            android:id="@+id/hanger_long"
            style="@style/ClosetItemStyle"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_50"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <TextView style="@style/ClosetItemTitle" android:text="행거.." />
            <TextView style="@style/ClosetItemSub" android:text="아우터" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/hanger_right_top"
            style="@style/ClosetItemStyle"
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/guideline_vertical_50"
            app:layout_constraintTop_toTopOf="@id/hanger_long">
            <TextView style="@style/ClosetItemTitle" android:text="행거 1" />
            <TextView style="@style/ClosetItemSub" android:text="아우터" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/hanger_right_bottom"
            style="@style/ClosetItemStyle"
            android:layout_width="0dp"
            android:layout_height="85dp"
            app:layout_constraintBottom_toBottomOf="@id/hanger_long"
            app:layout_constraintEnd_toEndOf="@id/hanger_right_top"
            app:layout_constraintStart_toStartOf="@id/hanger_right_top">
            <TextView style="@style/ClosetItemTitle" android:text="행거 1" />
            <TextView style="@style/ClosetItemSub" android:text="아우터" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/drawer_wide"
            style="@style/ClosetItemStyle"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@id/hanger_right_bottom"
            app:layout_constraintStart_toStartOf="@id/hanger_long"
            app:layout_constraintTop_toBottomOf="@id/hanger_long">
            <TextView style="@style/ClosetItemTitle" android:text="서랍 1" />
            <TextView style="@style/ClosetItemSub" android:text="아우터" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/hanger_bottom"
            style="@style/ClosetItemStyle"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@id/drawer_wide"
            app:layout_constraintStart_toStartOf="@id/drawer_wide"
            app:layout_constraintTop_toBottomOf="@id/drawer_wide">
            <TextView style="@style/ClosetItemTitle" android:text="행거 1" />
            <TextView style="@style/ClosetItemSub" android:text="아우터" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/codi_record_layout"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#FFFFFF"
        android:paddingBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/codi_record_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:text="코디 기록"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/view_more_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="더보기 >"
            android:textColor="#8E8E8E"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/codi_record_title_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/codi_record_title_tv" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/codi_record_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:paddingStart="15dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/codi_record_title_tv"
            tools:listitem="@layout/item_codi_record" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
