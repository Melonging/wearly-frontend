<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Top App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@android:color/white"
        app:navigationIcon="@drawable/ic_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 가운데 타이틀(스크린샷처럼 중앙 정렬 강제) -->
    <TextView
        android:id="@+id/tvToolbarTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="옷 정보"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#111827"
        app:layout_constraintTop_toTopOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="@id/toolbar"
        app:layout_constraintEnd_toEndOf="@id/toolbar" />

    <!-- Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- 이미지 카드 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardImage"
                android:layout_width="0dp"
                android:layout_height="260dp"
                app:cardCornerRadius="12dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E5E7EB"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/ivCloth"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@android:drawable/ic_menu_gallery"
                    android:contentDescription="@string/app_name" />
            </com.google.android.material.card.MaterialCardView>

            <!-- 위치 정보 -->
            <TextView
                android:id="@+id/tvLocationHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="위치 정보"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="#111827"
                app:layout_constraintTop_toBottomOf="@id/cardImage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- 옷장 라벨 -->
            <TextView
                android:id="@+id/tvClosetLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="옷장"
                android:textSize="12sp"
                android:textColor="#111827"
                app:layout_constraintTop_toBottomOf="@id/tvLocationHeader"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- 옷장 Spinner 박스 -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilCloset"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                style="@style/Wearly.Dropdown.Outline"
                app:endIconMode="dropdown_menu"
                app:layout_constraintTop_toBottomOf="@id/tvClosetLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/spCloset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:inputType="none"
                    android:importantForAutofill="no"
                    android:singleLine="true"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- 섹션 라벨 -->
            <TextView
                android:id="@+id/tvSectionLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="섹션"
                android:textSize="12sp"
                android:textColor="#111827"
                app:layout_constraintTop_toBottomOf="@id/tilCloset"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- 섹션 Spinner 박스 -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilSection"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="#E5E7EB"
                app:boxStrokeWidth="1dp"
                app:boxCornerRadiusTopStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusBottomEnd="10dp"
                app:layout_constraintTop_toBottomOf="@id/tvSectionLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <Spinner
                    android:id="@+id/spSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- 카테고리 정보 -->
            <TextView
                android:id="@+id/tvCategoryHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="카테고리 정보"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="#111827"
                app:layout_constraintTop_toBottomOf="@id/tilSection"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- 분류 라벨 -->
            <TextView
                android:id="@+id/tvTypeLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="분류"
                android:textSize="12sp"
                android:textColor="#111827"
                app:layout_constraintTop_toBottomOf="@id/tvCategoryHeader"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- 분류 Spinner 박스 -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="#E5E7EB"
                app:boxStrokeWidth="1dp"
                app:boxCornerRadiusTopStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusBottomEnd="10dp"
                app:layout_constraintTop_toBottomOf="@id/tvTypeLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <Spinner
                    android:id="@+id/spType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- 삭제 버튼 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDelete"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="16dp"
                android:text="옷 삭제"
                android:textStyle="bold"
                android:textColor="#EF4444"
                android:backgroundTint="@android:color/transparent"
                app:strokeColor="#EF4444"
                app:strokeWidth="1dp"
                app:cornerRadius="10dp"
                app:icon="@android:drawable/ic_menu_delete"
                app:iconPadding="8dp"
                app:iconGravity="textStart"
                app:layout_constraintTop_toBottomOf="@id/tilType"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
