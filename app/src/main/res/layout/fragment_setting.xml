<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 제목 -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="설정"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="#111111"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="14dp"/>

            <!-- 프로필 카드 -->
            <LinearLayout
                android:id="@+id/cardProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/bg_card_round_border"
                android:layout_marginBottom="18dp">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="먼지"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#111111"/>

                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="munji@example.com"
                    android:textSize="12sp"
                    android:textColor="#777777"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="12dp"/>

                <!-- 통계 3개 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_card_round_border"
                        android:padding="12dp"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="등록된 옷"
                            android:textSize="12sp"
                            android:textColor="#666666"/>

                        <TextView
                            android:id="@+id/tvClothesCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="42벌"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="#111111"
                            android:layout_marginTop="6dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_card_round_border"
                        android:padding="12dp"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="코디 기록"
                            android:textSize="12sp"
                            android:textColor="#666666"/>

                        <TextView
                            android:id="@+id/tvCoordiCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="18회"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="#111111"
                            android:layout_marginTop="6dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_card_round_border"
                        android:padding="12dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="함께한 시간"
                            android:textSize="12sp"
                            android:textColor="#666666"/>

                        <TextView
                            android:id="@+id/tvDays"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="23일"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="#111111"
                            android:layout_marginTop="6dp"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <!-- 섹션 타이틀 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="개인 잠금"
                android:textSize="12sp"
                android:textColor="#888888"
                android:layout_marginBottom="8dp"/>

            <!-- 카드: 개인 잠금 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card_round_border"
                android:padding="14dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="앱 잠금 사용"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#111111"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="생체 인증 또는 PIN으로 앱 보호"
                        android:textSize="12sp"
                        android:textColor="#777777"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchAppLock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- 섹션 타이틀 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="알림"
                android:textSize="12sp"
                android:textColor="#888888"
                android:layout_marginBottom="8dp"/>

            <!-- 카드: 알림 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card_round_border"
                android:orientation="vertical"
                android:padding="6dp">

                <!-- 항목 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="기록 리마인드 알림"
                        android:textSize="14sp"
                        android:textColor="#111111"/>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchRemind"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F2F2F2"
                    android:layout_marginHorizontal="12dp"/>

                <!-- 항목 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="코디 추천 알림"
                        android:textSize="14sp"
                        android:textColor="#111111"/>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchRecommend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
