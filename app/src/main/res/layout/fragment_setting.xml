<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!--  설정 화면 자체 Toolbar  -->

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarSettings"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="#FFFFFF"
        app:elevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="설정"
        app:titleTextAppearance="@style/ToolbarTitleBold"
        app:titleCentered="true" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollSettings"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/toolbarSettings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ================== 프로필 ================== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="16dp"
                android:paddingBottom="14dp"
                android:background="#FFFFFF">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="프로필"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#111111"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="서예은"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#111111"/>

                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="example@email.com"
                    android:textSize="12sp"
                    android:textColor="#777777"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@drawable/bg_section_divider"/>

            <!-- ================== 나의 기록 ================== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="14dp"
                android:paddingBottom="16dp"
                android:background="#FFFFFF">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="나의 기록"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#111111"
                    android:layout_marginBottom="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- 카드 1 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_stat_card"
                        android:padding="14dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="등록된 옷"
                            android:textSize="12sp"
                            android:textColor="#777777"/>

                        <TextView
                            android:id="@+id/tvClothesCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="42"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="#2E2A72"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="개"
                            android:textSize="12sp"
                            android:textColor="#777777"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <!-- 카드 2 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_stat_card"
                        android:padding="14dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="코디 기록"
                            android:textSize="12sp"
                            android:textColor="#777777"/>

                        <TextView
                            android:id="@+id/tvCoordiCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="18"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="#2E2A72"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="회"
                            android:textSize="12sp"
                            android:textColor="#777777"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <!-- 카드 3 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_stat_card"
                        android:padding="14dp"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="함께한 시간"
                            android:textSize="12sp"
                            android:textColor="#777777"/>

                        <TextView
                            android:id="@+id/tvDays"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="23"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="#2E2A72"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="일"
                            android:textSize="12sp"
                            android:textColor="#777777"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@drawable/bg_section_divider"/>

            <!-- ================== 보안 ================== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="14dp"
                android:paddingBottom="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="보안"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#111111"
                    android:layout_marginBottom="10dp"/>

                <!-- 앱 잠금 row (chevron) -->
                <LinearLayout
                    android:id="@+id/rowAppLock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">

                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/bg_icon_circle"
                        android:padding="10dp"
                        android:src="@drawable/ic_setting_lock"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="앱 잠금"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="#111111"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PIN으로 앱을 보호하세요"
                            android:textSize="12sp"
                            android:textColor="#777777"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_setting_chevron_right"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@drawable/bg_section_divider"/>

            <!-- ================== 알림 ================== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="14dp"
                android:paddingBottom="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="알림"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#111111"
                    android:layout_marginBottom="10dp"/>

                <!-- 기록 리마인드 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">

                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/bg_icon_circle"
                        android:padding="10dp"
                        android:src="@drawable/ic_setting_bell"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="기록 리마인드"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="#111111"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="코디 기록하라고 알려드립니다"
                            android:textSize="12sp"
                            android:textColor="#777777"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchRemind"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:id="@+id/layoutRemindDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_remind_card"
                        android:padding="16dp"
                        android:layout_marginTop="10dp"
                        android:visibility="gone">

                        <!-- 알림 받을 요일 -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="알림 받을 요일"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:layout_marginBottom="10dp"/>

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/chipGroupDays"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:chipSpacingHorizontal="8dp"
                            app:singleLine="true">

                            <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="36dp"
                                style="@style/Widget.Wearly.DayChip"
                                android:text="월"/>

                            <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="36dp"
                                style="@style/Widget.Wearly.DayChip"
                                android:text="화"/>

                            <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="36dp"
                                style="@style/Widget.Wearly.DayChip"
                                android:text="수"/>

                            <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="36dp"
                                style="@style/Widget.Wearly.DayChip"
                                android:text="목"/>

                            <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="36dp"
                                style="@style/Widget.Wearly.DayChip"
                                android:text="금"/>

                            <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="36dp"
                                style="@style/Widget.Wearly.DayChip"
                                android:text="토"/>

                            <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="36dp"
                                style="@style/Widget.Wearly.DayChip"
                                android:text="일"/>

                        </com.google.android.material.chip.ChipGroup>


                        <!-- 알림 시간 -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="알림 시간"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="6dp"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            app:boxCornerRadiusTopStart="14dp"
                            app:boxCornerRadiusTopEnd="14dp"
                            app:boxCornerRadiusBottomStart="14dp"
                            app:boxCornerRadiusBottomEnd="14dp">

                            <AutoCompleteTextView
                                android:id="@+id/actRemindTime"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="오전 12시"
                                android:inputType="none"/>
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F2F2F2"/>

                <!-- 코디 추천 알림 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">

                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/bg_icon_circle"
                        android:padding="10dp"
                        android:src="@drawable/ic_setting_bell"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="코디 추천 알림"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="#111111"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="날씨 기반 코디를 추천합니다"
                            android:textSize="12sp"
                            android:textColor="#777777"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchRecommend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@drawable/bg_section_divider"/>

            <!-- ================== 계정 관리 ================== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="14dp"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="계정 관리"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#111111"
                    android:layout_marginBottom="10dp"/>

                <!-- 로그아웃 -->
                <LinearLayout
                    android:id="@+id/rowLogout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">

                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/bg_icon_circle"
                        android:padding="10dp"
                        android:src="@drawable/ic_setting_logout"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="로그아웃"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="#111111"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="현재 세션을 종료합니다"
                            android:textSize="12sp"
                            android:textColor="#777777"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F2F2F2"/>

                <!-- 계정 삭제 -->
                <LinearLayout
                    android:id="@+id/rowDelete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">

                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/bg_icon_circle"
                        android:padding="10dp"
                        android:src="@drawable/ic_setting_user_delete"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="계정 삭제"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="#111111"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="계정을 영구적으로 삭제합니다"
                            android:textSize="12sp"
                            android:textColor="#777777"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
