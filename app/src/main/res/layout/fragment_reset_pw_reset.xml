<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/reset_pw_rs_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:orientation="vertical"

        android:paddingStart="30dp"
        android:paddingEnd="30dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">


        <TextView
            android:id="@+id/reset_pw_rs_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="새로운 비밀번호를 입력해주세요."
            android:textColor="@color/black"
            android:textSize="18sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="새 비밀번호"
            android:textColor="@color/black"

            android:layout_marginTop="20dp" />


        <EditText
            android:id="@+id/reset_pw_rs_pw_ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/bg_login_edittext"

            android:hint="8자 이상 입력해주세요"
            android:textSize="15sp"

            android:padding="15dp"

            android:layout_marginTop="10dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="새 비밀번호 재입력"
            android:textColor="@color/black"

            android:layout_marginTop="15dp" />


        <EditText
            android:id="@+id/reset_pw_rs_check_ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/bg_login_edittext"

            android:hint="8자 이상 입력해주세요"
            android:textSize="15sp"

            android:padding="15dp"

            android:layout_marginTop="10dp"/>


        <android.widget.Button
            android:id="@+id/reset_pw_rs_submit_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/bg_login_submit_btn"

            android:text="완료"
            android:textColor="@color/white"
            android:textSize="15sp"

            android:padding="15dp"

            android:layout_marginTop="40dp"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>