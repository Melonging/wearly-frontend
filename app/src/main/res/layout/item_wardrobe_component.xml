<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_closet_item"
    android:padding="16dp"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="8dp"
    android:elevation="2dp">

    <TextView
        android:id="@+id/component_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="행거 1"
        android:textColor="#333333"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/component_subtitle_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="아우터"
        android:textColor="#666666"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/component_title_tv"
        app:layout_constraintTop_toBottomOf="@id/component_title_tv" />

    <TextView
        android:id="@+id/component_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="8 items"
        android:textColor="#666666"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/component_title_tv"
        app:layout_constraintTop_toBottomOf="@id/component_subtitle_tv" />

    <ImageView
        android:id="@+id/chevron_iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_closet_chevron_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

