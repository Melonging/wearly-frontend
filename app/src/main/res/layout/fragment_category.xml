<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Header Title -->
    <TextView
        android:id="@+id/category_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카테고리"
        android:textSize="23sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Category Navigation Bar (Horizontal Scrollable) -->
    <HorizontalScrollView
        android:id="@+id/category_scroll_hs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/category_title_tv">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/category_all_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전체"
                android:textSize="18sp"
                android:textColor="#666666"
                android:textStyle="bold"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:background="?attr/selectableItemBackground"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/category_outer_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아우터"
                android:textSize="18sp"
                android:textColor="#666666"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:background="?attr/selectableItemBackground"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/category_tops_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상의"
                android:textSize="18sp"
                android:textColor="#666666"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:background="?attr/selectableItemBackground"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/category_pants_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="바지"
                android:textSize="18sp"
                android:textColor="#666666"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:background="?attr/selectableItemBackground"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/category_skirt_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="스커트/원피스"
                android:textSize="18sp"
                android:textColor="#666666"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:background="?attr/selectableItemBackground"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/category_underwear_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="신발"
                android:textSize="18sp"
                android:textColor="#666666"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:background="?attr/selectableItemBackground"
                android:layout_marginEnd="12dp" />

            <ImageView
                android:id="@+id/category_more_iv"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:src="@drawable/ic_closet_chevron_right"
                android:rotation="90"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Main Content Grid -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/clothing_grid_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/category_scroll_hs"
        app:layout_constraintVertical_bias="0.0"
        app:spanCount="3"
        tools:layout_editor_absoluteX="0dp"
        tools:listitem="@layout/item_clothing_record" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/category_expand_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/category_title_tv">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/category_grid_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="4"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/item_category_grid" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE"
            app:layout_constraintTop_toBottomOf="@id/category_grid_rv" />

        <TextView
            android:id="@+id/close_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="닫기"
            android:textSize="18sp"
            android:textColor="#333333"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

