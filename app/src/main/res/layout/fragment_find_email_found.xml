<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/find_email_found_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:orientation="vertical"

        android:paddingStart="30dp"
        android:paddingEnd="30dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/find_email_found_pw_layout">


        <TextView
            android:id="@+id/find_email_found_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="이메일을 찾았어요."
            android:textColor="@color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/find_email_found_ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/bg_login_edittext"

            android:text="example@email.com"
            android:textSize="15sp"

            android:padding="15dp"

            android:layout_marginTop="15dp"/>

        <android.widget.Button
            android:id="@+id/find_email_found_submit_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/bg_login_submit_btn"

            android:text="로그인 하러가기"
            android:textColor="@color/white"
            android:textSize="15sp"

            android:padding="15dp"

            android:layout_marginTop="40dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/find_email_found_pw_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="50dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="비밀번호를 잊으셨나요?"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/find_email_found_pw_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="비밀번호 찾기"
            android:textColor="@color/logo_color"
            android:textSize="13sp"
            android:textStyle=""

            android:layout_marginStart="10dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>