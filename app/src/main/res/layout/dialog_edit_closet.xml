<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- 가운데 카드 -->
    <LinearLayout
        android:id="@+id/edit_wardrobe_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_closet_card"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 타이틀 & 닫기 버튼 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="옷장 편집"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#111111"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:id="@+id/close_ic"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_closet_close"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 간격 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- 타입 라벨 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="타입"
            android:textSize="12sp"
            android:textColor="#555555" />

        <!-- 타입 탭 -->
        <LinearLayout
            android:id="@+id/type_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/type_closet_tv"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="옷장"
                android:textSize="14sp"
                android:textColor="#111111"
                android:background="#E5E5EC" />

            <TextView
                android:id="@+id/type_drawer_tv"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="서랍장"
                android:textSize="14sp"
                android:textColor="#999999"
                android:background="#E5E5EC"
                android:layout_marginStart="8dp" />

            <TextView
                android:id="@+id/type_shoes_tv"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="신발장"
                android:textSize="14sp"
                android:textColor="#999999"
                android:background="#E5E5EC"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- 간격 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- 이름 라벨 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textSize="12sp"
            android:textColor="#555555" />

        <!-- 이름 입력 박스 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:background="#FFFFFF">

            <EditText
                android:id="@+id/name_et"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textSize="14sp"
                android:textColor="#111111"
                android:hint="옷장1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/name_count_tv"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/name_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 / 10"
                android:textSize="12sp"
                android:textColor="#999999"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 간격 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <!-- 완료 버튼 -->
        <Button
            android:id="@+id/confirm_btn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="완료"
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:background = "@drawable/bg_login_submit_btn" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>