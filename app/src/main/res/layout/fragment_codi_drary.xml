<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back Arrow -->
        <ImageView
            android:id="@+id/back_arrow_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_closet_chevron_right"
            android:rotation="180"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp" />

        <!-- Date -->
        <TextView
            android:id="@+id/date_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2026년 1월 1일"
            android:textColor="#000000"
            android:textSize="21sp"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- Right Icons -->
        <ImageView
            android:id="@+id/recent_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_codidiary_recent"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:layout_marginEnd="12dp" />

        <ImageView
            android:id="@+id/confirm_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_codidiary_check_white"
            android:tint="@color/black"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp" />
    </LinearLayout>

    <!-- Weather Information -->
    <LinearLayout
        android:id="@+id/weather_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center_vertical"
        android:background="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/header_layout">

        <TextView
            android:id="@+id/temperature_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="34°/36°"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Selected Items Section -->
    <LinearLayout
        android:id="@+id/selected_items_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/weather_layout">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="선택된 옷 : "
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/selected_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3개"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <HorizontalScrollView
            android:id="@+id/selected_items_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Selected Item 1 -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_closet_item">

                    <ImageView
                        android:id="@+id/selected_item_1_iv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <ImageView
                        android:id="@+id/selected_item_1_close_iv"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_closet_plus"
                        android:rotation="45"
                        android:padding="2dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_margin="4dp" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Selected Item 2 -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_closet_item">

                    <ImageView
                        android:id="@+id/selected_item_2_iv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <ImageView
                        android:id="@+id/selected_item_2_close_iv"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_closet_plus"
                        android:rotation="45"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="2dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_margin="4dp" />
                </androidx.constraintlayout.widget.ConstraintLayout>



            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <!-- Category Navigation Tabs -->
    <HorizontalScrollView
        android:id="@+id/category_scroll_hs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/selected_items_layout">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/category_all_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전체"
                android:textSize="18sp"
                android:textColor="#666666"
                android:textStyle="bold"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:background="?attr/selectableItemBackground"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/category_outer_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아우터"
                android:textSize="18sp"
                android:textColor="#666666"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:background="?attr/selectableItemBackground"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/category_tops_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상의"
                android:textSize="18sp"
                android:textColor="#666666"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:background="?attr/selectableItemBackground"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/category_pants_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="바지"
                android:textSize="18sp"
                android:textColor="#666666"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:background="?attr/selectableItemBackground"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/category_skirt_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="치마"
                android:textSize="18sp"
                android:textColor="#666666"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:background="?attr/selectableItemBackground"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/category_underwear_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="속옷/등"
                android:textSize="18sp"
                android:textColor="#666666"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:background="?attr/selectableItemBackground"
                android:layout_marginEnd="12dp" />

            <ImageView
                android:id="@+id/category_more_iv"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:src="@drawable/ic_closet_chevron_right"
                android:rotation="90"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp" />
        </LinearLayout>
    </HorizontalScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/category_expand_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/category_scroll_hs">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/category_grid_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="4"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/item_category_grid" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE"
            app:layout_constraintTop_toBottomOf="@id/category_grid_rv" />

        <TextView
            android:id="@+id/close_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="닫기"
            android:textSize="18sp"
            android:textColor="#333333"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Clothing Grid -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/clothing_grid_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="3"
        app:layout_constraintTop_toBottomOf="@id/category_scroll_hs"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_list_upload" />

</androidx.constraintlayout.widget.ConstraintLayout>

