<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.ui.LoginActivity">


    <ImageView
        android:id="@+id/login_wearly_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/wearly_typo"

        android:paddingTop="15dp"
        android:paddingBottom="15dp"

        android:layout_marginTop="30dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    
    
    <LinearLayout
        android:id="@+id/login_idpw_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:orientation="vertical"

        android:paddingStart="30dp"
        android:paddingEnd="30dp"

        android:layout_marginTop="30dp"

        app:layout_constraintTop_toBottomOf="@id/login_wearly_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/login_signup_layout">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="아이디"
            android:textColor="@color/black"/>


        <EditText
            android:id="@+id/login_id_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/bg_login_edittext_selector"

            android:hint="example@email.com"
            android:textSize="15sp"

            android:padding="15dp"

            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/login_id_wrong_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="에러"
            android:textColor="@color/error_red"

            android:layout_marginTop="5dp"

            android:visibility="gone"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="비밀번호"
            android:textColor="@color/black"

            android:layout_marginTop="15dp" />


        <EditText
            android:id="@+id/login_pw_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/bg_login_edittext_selector"

            android:hint="비밀번호를 입력해주세요"
            android:textSize="15sp"
            android:inputType="textPassword"

            android:padding="15dp"

            android:layout_marginTop="10dp"/>


        <TextView
            android:id="@+id/login_pw_wrong_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="에러"
            android:textSize="12sp"
            android:textColor="@color/error_red"

            android:layout_marginTop="5dp"

            android:visibility="gone"/>


        
        <android.widget.Button
            android:id="@+id/login_submit_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/bg_login_submit_btn"

            android:text="로그인"
            android:textColor="@color/white"
            android:textSize="15sp"

            android:padding="15dp"

            android:layout_marginTop="40dp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="horizontal"

            android:layout_gravity="center"

            android:layout_marginTop="20dp">


            <TextView
                android:id="@+id/login_find_email_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:text="이메일 찾기" />
            
            
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/box_gray"

                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp" />


            <TextView
                android:id="@+id/login_reset_pw_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="비밀번호 재설정" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"

            android:layout_marginTop="25dp" >


            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"

                android:background="@color/box_gray"

                android:layout_weight="1"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="또는"
                android:textSize="12sp"

                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp" />


            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"

                android:background="@color/box_gray"

                android:layout_weight="1"
                android:layout_gravity="center_vertical"/>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/login_google_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:gravity="center"

            android:background="@drawable/bg_login_edittext_selector"

            android:padding="2dp"

            android:layout_marginTop="25dp" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"

                android:src="@drawable/ic_google" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Continue with Google"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="14sp"

                android:paddingTop="15dp"
                android:paddingBottom="15dp"

                android:layout_marginStart="10dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_signup_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="50dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="아직 회원이 아니신가요?"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/login_signup_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="회원가입"
            android:textColor="@color/logo_color"
            android:textSize="13sp"
            android:textStyle=""

            android:layout_marginStart="10dp" />

    </LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>