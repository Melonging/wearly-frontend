<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="80dp"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/diary_selected_clothes_close_btn"
        android:layout_width="15dp"
        android:layout_height="15dp"

        android:src="@drawable/btn_close_bg_gray"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:translationZ="10dp"
        android:outlineProvider="none" />

    <androidx.cardview.widget.CardView
        android:layout_width="65dp"
        android:layout_height="65dp"

        android:padding="5dp"

        android:background="@drawable/bg_calendar_item_selector"

        app:cardCornerRadius="10dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/diary_selected_clothes_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:src="@drawable/cloth_01" />

    </androidx.cardview.widget.CardView>






</androidx.constraintlayout.widget.ConstraintLayout>