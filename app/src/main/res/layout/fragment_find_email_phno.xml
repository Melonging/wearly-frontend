<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/find_email_phno_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:orientation="vertical"

        android:paddingStart="30dp"
        android:paddingEnd="30dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">


        <TextView
            android:id="@+id/find_email_phno_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="휴대폰 번호를 입력해주세요."
            android:textColor="@color/black"
            android:textSize="18sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="휴대폰 번호"
            android:textColor="@color/black"

            android:layout_marginTop="20dp" />


        <EditText
            android:id="@+id/find_email_phno_ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/bg_login_edittext"

            android:hint="010-1234-5678"
            android:textSize="15sp"

            android:padding="15dp"

            android:layout_marginTop="10dp"/>

        <android.widget.Button
            android:id="@+id/find_email_phno_submit_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/bg_login_submit_btn"

            android:text="다음"
            android:textColor="@color/white"
            android:textSize="15sp"

            android:padding="15dp"

            android:layout_marginTop="40dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>