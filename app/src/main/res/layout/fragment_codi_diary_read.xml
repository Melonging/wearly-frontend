<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/white">

    <ImageButton
        android:id="@+id/diary_read_back_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"

        android:layout_marginTop="15dp"
        android:layout_marginStart="30dp"

        android:src="@drawable/btn_arrow_left"
        android:scaleType="centerInside"
        android:background="@android:color/transparent"



        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/diary_read_day_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="2026년 1월 1일"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"

        android:paddingTop="15dp"
        android:paddingBottom="15dp"


        app:layout_constraintTop_toTopOf="@id/diary_read_back_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/diary_read_back_btn"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/diary_read_clothes_cv"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        app:cardCornerRadius="10dp"

        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="10dp"

        android:clickable="false"


        app:layout_constraintTop_toBottomOf="@id/diary_read_day_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/diary_read_btns_layout">

        <FrameLayout
            android:id="@+id/diary_read_clothes_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.cardview.widget.CardView>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"

        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"

        android:gravity="center"

        android:translationZ="10dp"

        android:background="@drawable/bg_diary_info_box"

        app:layout_constraintTop_toTopOf="@id/diary_read_clothes_cv"
        app:layout_constraintStart_toStartOf="@id/diary_read_clothes_cv">

        <ImageView
            android:id="@+id/diary_read_weather_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"

            android:layout_marginEnd="5dp"

            android:src="@drawable/ic_weather_snowy"
            android:scaleType="centerInside"/>

        <TextView
            android:id="@+id/diary_read_temp_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="0°/0°" />

    </LinearLayout>


    <FrameLayout
        android:id="@+id/diary_read_like_btn_toggle"
        android:layout_width="30dp"
        android:layout_height="30dp"

        android:background="@drawable/bg_diary_info_box"

        android:padding="5dp"

        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"

        android:translationZ="10dp"

        android:clickable="true"

        app:layout_constraintTop_toTopOf="@id/diary_read_clothes_cv"
        app:layout_constraintEnd_toEndOf="@id/diary_read_clothes_cv">

        <ImageButton
            android:id="@+id/diary_read_like_unselected"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:clickable="false"

            android:src="@drawable/btn_like_unselected"
            android:background="@android:color/transparent"
            android:scaleType="centerInside" />

        <ImageButton
            android:id="@+id/diary_read_like_selected"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:clickable="false"

            android:src="@drawable/btn_like_selected"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"

            android:visibility="gone"/>
    </FrameLayout>


    <LinearLayout
        android:id="@+id/diary_read_btns_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal"

        android:layout_marginTop="10dp"

        app:layout_constraintEnd_toEndOf="@id/diary_read_clothes_cv"
        app:layout_constraintBottom_toTopOf="@id/diary_read_layout">


        <ImageButton
            android:id="@+id/diary_read_edit_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:src="@drawable/btn_diary_edit"
            android:background="@android:color/transparent"
            android:scaleType="centerInside" />

        <ImageButton
            android:id="@+id/diary_read_delete_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:layout_marginStart="3dp"

            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/btn_diary_delete" />

        <ImageButton
            android:id="@+id/diary_read_share_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:layout_marginStart="3dp"

            android:src="@drawable/btn_diary_share"
            android:background="@android:color/transparent"
            android:scaleType="centerInside" />

    </LinearLayout>




    <LinearLayout
        android:id="@+id/diary_read_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingHorizontal="30dp"

        android:orientation="vertical"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"

            android:text="코디 제목"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/diary_read_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="코디 제목"
            android:textColor="@color/black"
            android:textSize="14sp"


            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:text="오늘의 일기"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"

            android:layout_marginTop="15dp"/>


        <TextView
            android:id="@+id/diary_read_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="top"
            android:overScrollMode="always"
            android:scrollbars="vertical"

            android:maxLines="6"

            android:text="여기에 저장된 일기 내용이 출력됩니다."
            android:textColor="@color/black"
            android:textSize="14sp"

            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"/>



    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>