<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/white">

    <ImageButton
        android:id="@+id/diary_edit_back_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"

        android:layout_marginTop="15dp"
        android:layout_marginStart="30dp"

        android:src="@drawable/btn_arrow_left"
        android:scaleType="centerInside"
        android:background="@android:color/transparent"



        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/diary_edit_day_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="2026년 1월 1일"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"

        android:paddingTop="15dp"
        android:paddingBottom="15dp"


        app:layout_constraintTop_toTopOf="@id/diary_edit_back_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/diary_edit_back_btn"/>


    <ImageButton
        android:id="@+id/diary_edit_submit_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"

        android:src="@drawable/btn_check_thin"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"

        android:layout_marginEnd="30dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/diary_edit_day_tv"
        app:layout_constraintBottom_toBottomOf="@id/diary_edit_day_tv" />



    <androidx.cardview.widget.CardView
        android:id="@+id/diary_edit_clothes_cv"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        app:cardCornerRadius="10dp"

        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="10dp"

        android:clickable="false"

        app:layout_constraintTop_toBottomOf="@id/diary_edit_day_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/diary_edit_layout">

        <FrameLayout
            android:id="@+id/diary_edit_clothes_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.cardview.widget.CardView>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"

        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"

        android:gravity="center"

        android:translationZ="10dp"

        android:background="@drawable/bg_diary_info_box"

        app:layout_constraintTop_toTopOf="@id/diary_edit_clothes_cv"
        app:layout_constraintStart_toStartOf="@id/diary_edit_clothes_cv">

        <ImageView
            android:id="@+id/diary_edit_weather_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"

            android:layout_marginEnd="5dp"

            android:src="@drawable/ic_weather_snowy"
            android:scaleType="centerInside"/>

        <TextView
            android:id="@+id/diary_edit_temp_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="0°/0°" />

    </LinearLayout>


    <FrameLayout
        android:id="@+id/diary_edit_like_btn_toggle"
        android:layout_width="30dp"
        android:layout_height="30dp"

        android:background="@drawable/bg_diary_info_box"

        android:padding="5dp"

        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"

        android:translationZ="10dp"

        android:clickable="true"

        app:layout_constraintTop_toTopOf="@id/diary_edit_clothes_cv"
        app:layout_constraintEnd_toEndOf="@id/diary_edit_clothes_cv">

        <ImageButton
            android:id="@+id/diary_edit_like_unselected"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:clickable="false"

            android:src="@drawable/btn_like_unselected"
            android:background="@android:color/transparent"
            android:scaleType="centerInside" />

        <ImageButton
            android:id="@+id/diary_edit_like_selected"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:clickable="false"

            android:src="@drawable/btn_like_selected"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"

            android:visibility="gone"/>
    </FrameLayout>



    <LinearLayout
        android:id="@+id/diary_edit_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingHorizontal="30dp"

        android:orientation="vertical"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="코디 제목"

            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/diary_edit_title_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:hint="오늘의 코디 제목을 입력하세요."
            android:textSize="14sp"
            android:maxLines="1"

            android:background="@drawable/bg_login_edittext_selector"

            android:padding="15dp"

            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:text="오늘의 일기"

            android:layout_marginTop="15dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:counterEnabled="true"
            app:counterMaxLength="200"
            app:hintEnabled="false"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/diary_edit_et"
                android:layout_width="match_parent"
                android:layout_height="150dp"

                android:hint="오늘 하루는 어땠나요? 자유롭게 적어보세요."
                android:textSize="14sp"
                android:gravity="top"

                android:inputType="textMultiLine"
                android:overScrollMode="always"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"

                android:background="@drawable/bg_login_edittext_selector"
                android:padding="15dp" />

        </com.google.android.material.textfield.TextInputLayout>



    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>