<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"

    android:background="@color/white"

    tools:context=".codiDiary.ui.CodiCalendarFragment">

    <TextView
        android:id="@+id/calendar_yearmonth_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="2026년 1월"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"

        android:paddingTop="15dp"
        android:paddingBottom="20dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/calendar_day_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingHorizontal="20dp"

        android:layout_marginTop="10dp"

        android:orientation="horizontal"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calendar_yearmonth_tv" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="일"
            android:textColor="@color/text_gray"

            android:gravity="center"
            android:layout_weight="1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="월"
            android:textColor="@color/text_gray"

            android:gravity="center"
            android:layout_weight="1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="화"
            android:textColor="@color/text_gray"

            android:gravity="center"
            android:layout_weight="1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="수"
            android:textColor="@color/text_gray"

            android:gravity="center"
            android:layout_weight="1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="목"
            android:textColor="@color/text_gray"

            android:gravity="center"
            android:layout_weight="1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="금"
            android:textColor="@color/text_gray"

            android:gravity="center"
            android:layout_weight="1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="토"
            android:textColor="@color/text_gray"

            android:gravity="center"
            android:layout_weight="1" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/calendar_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="20dp"

        app:layout_constraintTop_toBottomOf="@id/calendar_day_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/calendar_weather_tv"

        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="7"
        tools:listitem="@layout/item_calendar"/>

    <TextView
        android:id="@+id/calendar_weather_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="이번주 날씨"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"

        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"

        app:layout_constraintTop_toBottomOf="@id/calendar_rv"
        app:layout_constraintStart_toStartOf="parent" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/calendar_weather_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginHorizontal="20dp"

        android:layout_marginTop="15dp"
        android:layout_marginBottom="40dp"

        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calendar_weather_tv"
        app:layout_constraintVertical_bias="1.0"
        tools:listitem="@layout/item_calendar_weather" />

</androidx.constraintlayout.widget.ConstraintLayout>