<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:fillViewport="true"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/signup_login_layout">

        <LinearLayout
            android:id="@+id/signup_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical"

            android:paddingStart="30dp"
            android:paddingEnd="30dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="이름"
                android:textColor="@color/black"/>


            <EditText
                android:id="@+id/signup_name_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/bg_login_edittext_selector"

                android:hint="홍길동"
                android:textSize="15sp"

                android:padding="15dp"

                android:layout_marginTop="10dp"/>


            <TextView
                android:id="@+id/signup_name_wrong_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="오류"
                android:textSize="10sp"
                android:textColor="@color/error_red"

                android:layout_marginTop="5dp"

                android:visibility="gone"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="성별"
                android:textColor="@color/black"

                android:layout_marginTop="15dp" />


            <RadioGroup
                android:id="@+id/signup_gender_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal"
                android:gravity="center"

                android:layout_marginTop="15dp">


                <RadioButton
                    android:id="@+id/signup_man_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:button="@null"

                    android:background="@drawable/bg_login_radiobox_selector"

                    android:layout_weight="1"
                    android:gravity="center"

                    android:layout_marginEnd="10dp"

                    android:text="남자" />
                <RadioButton
                    android:id="@+id/signup_woman_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:button="@null"

                    android:background="@drawable/bg_login_radiobox_selector"

                    android:layout_weight="1"
                    android:gravity="center"

                    android:text="여자" />
            </RadioGroup>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="생년월일"
                android:textColor="@color/black"

                android:layout_marginTop="15dp" />


            <EditText
                android:id="@+id/signup_birth_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/bg_login_edittext_selector"

                android:hint="YYMMDD"
                android:textSize="15sp"

                android:padding="15dp"

                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/signup_birth_wrong_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="오류"
                android:textSize="10sp"
                android:textColor="@color/error_red"

                android:layout_marginTop="5dp"

                android:visibility="gone"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="이메일"
                android:textColor="@color/black"

                android:layout_marginTop="15dp" />


            <EditText
                android:id="@+id/signup_id_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/bg_login_edittext_selector"

                android:hint="example@email.com"
                android:textSize="15sp"

                android:padding="15dp"

                android:layout_marginTop="10dp" />


            <TextView
                android:id="@+id/signup_id_wrong_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="오류"
                android:textSize="10sp"
                android:textColor="@color/error_red"

                android:layout_marginTop="5dp"

                android:visibility="gone"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="휴대폰 번호"
                android:textColor="@color/black"

                android:layout_marginTop="15dp" />


            <EditText
                android:id="@+id/signup_phno_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/bg_login_edittext_selector"

                android:hint="'-'를 제외하고 입력해주세요"
                android:textSize="15sp"

                android:padding="15dp"

                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/signup_phno_wrong_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="오류"
                android:textSize="10sp"
                android:textColor="@color/error_red"

                android:layout_marginTop="5dp"

                android:visibility="gone"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="비밀번호"
                android:textColor="@color/black"

                android:layout_marginTop="15dp" />


            <EditText
                android:id="@+id/signup_pw_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/bg_login_edittext_selector"

                android:hint="8자 이상 입력해주세요"
                android:textSize="15sp"
                android:inputType="textPassword"

                android:padding="15dp"

                android:layout_marginTop="10dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="비밀번호 재입력"
                android:textColor="@color/black"

                android:layout_marginTop="15dp" />

            <TextView
                android:id="@+id/signup_pw_wrong_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="오류"
                android:textSize="10sp"
                android:textColor="@color/error_red"

                android:layout_marginTop="5dp"

                android:visibility="gone"/>


            <EditText
                android:id="@+id/signup_pw_check_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/bg_login_edittext_selector"

                android:hint="8자 이상 입력해주세요"
                android:textSize="15sp"
                android:inputType="textPassword"

                android:padding="15dp"

                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/signup_pw_check_wrong_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="오류 메시지"
                android:textSize="10sp"
                android:textColor="@color/error_red"

                android:layout_marginTop="5dp"

                android:visibility="gone"/>


            <android.widget.Button
                android:id="@+id/signup_submit_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/bg_login_submit_btn"

                android:text="다음"
                android:textColor="@color/white"
                android:textSize="15sp"

                android:padding="15dp"

                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"/>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/signup_login_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="50dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="계정이 있으신가요?"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/signup_login_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="로그인"
            android:textColor="@color/logo_color"
            android:textSize="13sp"
            android:textStyle=""

            android:layout_marginStart="10dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>