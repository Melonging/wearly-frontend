<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.ui.SignupAgreementActivity">


    <ImageButton
        android:id="@+id/signup_agreement_back_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"

        android:layout_marginTop="15dp"
        android:layout_marginStart="30dp"

        android:src="@drawable/btn_arrow_left"
        android:scaleType="centerInside"
        android:background="@android:color/transparent"



        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/signup_agreement_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="개인정보 처리방침"
        android:textColor="@color/black"
        android:textSize="20sp"

        android:paddingTop="15dp"
        android:paddingBottom="15dp"


        app:layout_constraintTop_toTopOf="@id/signup_agreement_back_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/signup_agreement_back_btn"/>
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="30dp"

        app:layout_constraintTop_toBottomOf="@id/signup_agreement_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:fillViewport="true" >
            
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/terms_content"
                android:textColor="@color/black"/>


        </ScrollView>
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>