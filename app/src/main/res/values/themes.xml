<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Wearly_frontend" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Wearly_frontend" parent="Base.Theme.Wearly_frontend" />

    <style name="ClosetItemStyle">
        <item name="android:background">@drawable/bg_closet_item</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="ClosetItemTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#333333</item> <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ClosetItemSub">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#666666</item> <item name="android:textSize">11sp</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>


    // 스플래시 스크린 스타일
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#FFFFFF</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/wearly_typo_splash</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
        <item name="postSplashScreenTheme">@style/Theme.Wearly_frontend</item>
    </style>

</resources>