<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Retrofit Permission -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- 인터넷 사용 권한 추가 -->
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Wearly_frontend"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".upload.TestActivity"
            android:exported="false" />
        <activity
            android:name=".upload.ui.activity.ClothingDetailActivity"
            android:exported="false" />
        <activity
            android:name=".upload.ui.activity.UploadActivity"
            android:exported="false" />
        <activity
            android:name=".upload.ui.activity.UploadLoadingActivity"
            android:exported="false" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="ddwu.com.mobile.wearly_frontend.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity
            android:name=".closet.ui.ClothesListActivity"
            android:exported="false" />
        <activity
            android:name=".login.ui.ResetPwActivity"
            android:exported="false" />
        <activity
            android:name=".login.ui.FindEmailActivity"
            android:exported="false" />
        <activity
            android:name=".login.ui.SignupActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true" />
        <activity
            android:name=".login.ui.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.App.Starting">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>